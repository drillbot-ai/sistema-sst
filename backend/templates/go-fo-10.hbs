<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    body { font-family: Arial, sans-serif; font-size:12px; }
    th, td { border:1px solid #e5e7eb; padding:6px; }
    table { border-collapse:collapse; width:100%; }
    th { background:#f9fafb; text-transform:uppercase; font-size:10px; }
  </style>
</head>
<body>
<h2>GO-FO-10 · Cronograma de actividades de mantenimiento</h2>
<p><b>Mes:</b> {{data.hdr.month}} &nbsp; <b>Año:</b> {{data.hdr.year}}</p>
<table>
  <thead>
    <tr><th>Código</th><th>Equipo</th><th>Marca</th><th>Características</th><th>Días</th><th>Frecuencia</th></tr>
  </thead>
  <tbody>
    {{#each data.schedule}}
    <tr>
      <td>{{this.codigo}}</td><td>{{this.equipo}}</td><td>{{this.marca}}</td><td>{{this.caracteristicas}}</td><td style="text-align:right">{{this.dias}}</td><td>{{this.frecuencia}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
</body>
</html>